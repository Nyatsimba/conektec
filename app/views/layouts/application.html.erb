<!DOCTYPE html>
<html>
<head>
  <title>Conektec</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://s3.amazonaws.com/conektaapi/v0.3.0/js/conekta.js" %> 
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "conekta-key", :content => ENV["CONEKTA_PUBLIC_KEY"] %>
</head>

<body>

<%= render 'layouts/header' %>

<div class="container">
	
	<% flash.each do |name, msg| %>
		<% if msg.is_a?(String) %>
			<div class="alert alert-<%= name.to_s == 'notice' ? "success" : "danger" %> alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			</div>
		<% end %>
	<% end %>

	<%= yield %>
	
	<%= render 'layouts/footer' %>
</div>


</body>
</html>
